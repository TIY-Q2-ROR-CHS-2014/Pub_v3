= form_for [@pub, @drink] do |f|
  = render 'layouts/error_messages', object: @drink
  = f.label :name
  = f.text_field :name
  %br
  = f.label :cost
  = f.text_field :cost
  %br
  = f.label :description
  = f.text_area :description
  / = f.select :description, options_for_select(Drink::SHIT_BEERS)
  %br
  - @categories.each do |category|
    = check_box_tag 'drink[category_ids][]', category.id, @drink.categories.include?(category), {id: "category_id_#{category.id}"}
    = label_tag "category_id_#{category.id}", category.name
    %br

  %br
  = f.submit
= link_to "Cancel", pub_path(@pub)